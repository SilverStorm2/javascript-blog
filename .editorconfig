# EditorConfig jest włączony w tym pliku
root = true

# Ustawienia domyślne dla wszystkich plików
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Specyficzne ustawienia dla plików Markdown
[*.md]
trim_trailing_whitespace = false
